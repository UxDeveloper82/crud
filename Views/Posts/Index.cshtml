<div class="main-img">
    <span class="title">Amazing Blog Site</span>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="card-my-4 mt-5">
                Best Appliances Repair & install
                <br><small>Blogs for  @DateTime.Now.Year</small>
            </h1>
            <hr />
            <div class="card card-4 mt-5">
                <div class="thumbnail-area">
                    
                        <ul>
                              @foreach (var post in Model)
                              {
                                  <li>
                                      <a asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">
                                          @post.Title
                                      </a>
                                  </li>
                              }
                          </ul>
                    @*

                    @foreach (var post in Model.Posts)
                    {

                        var image_path = $"/Image/{post.Image}";
