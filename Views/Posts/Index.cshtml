@model IEnumerable<PartsInventory.Models.Post>
@{
    ViewData["Title"] = "Blog Website";
    ViewData["Description"] = "This Blog Has Everything";
    ViewData["Keywords"] = "Blog programing travel photography";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Home Page!</h2>
    <img src="~/content/static/repais.jpg" width="500"/>
