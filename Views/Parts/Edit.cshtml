@model PartsInventory.ViewModels.PartViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Part</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Parts" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="PartName" class="control-label"></label>
                <input asp-for="PartName" class="form-control" />
                <span asp-validation-for="PartName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartNumber" class="control-label"></label>
                <input asp-for="PartNumber" class="form-control" />
                <span asp-validation-for="PartNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartDescription" class="control-label"></label>
                <input asp-for="PartDescription" class="form-control" />
                <span asp-validation-for="PartDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberInStock" class="control-label"></label>
                <input asp-for="NumberInStock" class="form-control" />
                <span asp-validation-for="NumberInStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartPrice" class="control-label"></label>
                <input asp-for="PartPrice" class="form-control" />
                <span asp-validation-for="PartPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
