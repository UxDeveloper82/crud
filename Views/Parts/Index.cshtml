@model IEnumerable<PartsInventory.Models.Part>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/shared/_Layout.cshtml";

}

<h2>Index</h2>

<p>
    <a asp-controller="Parts" asp-action="Edit">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberInStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberInStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartPrice)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new {id = item.Id /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Remove", new {id = item.Id /*id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
