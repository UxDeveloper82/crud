@model PartsInventory.ViewModels.PostViewModel

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <form asp-controller="Panel" asp-action="Edit" method="post">
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" asp-for="Title" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <input class="form-control" asp-for="Description" />
        </div>
        <div class="form-group">
            <label>Body</label>
            <input class="form-control" asp-for="Body" />
        </div>
        <div class="form-group">
            <label>Your Name</label>
            <input class="form-control" asp-for="CreatedBy" />
        </div>
        <div class="form-group">
            <label>Category</label>
            <select class="form-control" asp-for="Category">
                <option value="News">News</option>
                <option value="Classes">Classes</option>
                <option value="Tips">Tips</option>
            </select>
        </div>
        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit" />
    </form>

</div>

